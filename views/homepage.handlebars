{{#each blogs as |blog| }}
    <div class="col-md-5">
        <h2>
            <a href="/blog/{{blog.id}}">{{blog.name}}</a>
        </h2>
        <p>By {{blog.author}}
           on  {{format_date blog.date}}
        </p>
    </div>
    <div class="col-md-7">
        <p>
           {{blog.description}}
        </p>
    </div>

{{/each}}

