{{#each blogs as |blog| }}
    <div>
    <div class="card">
        <div class="col-md-5">
            <h2>
                <a href="/blog/{{blog.id}}">{{blog.name}}</a>
            </h2>
        </div>
        <div class="col-md-7">
            <p> {{blog.description}}</p>
        </div>
         <p>By {{blog.author}} on  {{format_date blog.date}}</p>
    </div>
    <footer>
        <textarea class="form-input" id="blog-comment{{blog.id}}" name="comment"></textarea>
        <button data-id={{blog.id}}  class="submit-btn btn btn-primary">Add comment</button>
    </footer>
    </div>

{{/each}}

