{{#each blogs as |blog| }}
<div class="row mb-4 book">
    <div class="col-md-5">
        <h2>
            <a href="/book/{{blog.id}}">{{blog.name}}</a>
        </h2>
        <p>By {{blog.author}}</p>
    </div>
    <div class="col-md-7">
        <p>
           {{blog.description}}
        </p>
    </div>
</div>

{{/each}}

