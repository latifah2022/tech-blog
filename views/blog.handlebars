<div class="blog">
    <div class="card-1">

    </div>
    <div class="card-2">

    </div>
    <div class="card-3">

    </div>
    <p>
        <h3>Comments:</h3>
        {{#each comments as |comment|}}
        <span class="reviews">{{comment.userReview}}</span>
        <p> - {{comment.user.name}} on {{format_date comment.date_created}}</p>
        {{/each}}
  </p>

    <form class="form review-form">
    <div class="form-group">
        <label for="review">Comment</label>
        <textarea class="form-input" id="blog-comment" name="comment"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="bttn btn-primary">Create</button>
    </div>
  </form>

  <button class="post">New Post</button>

</div>
<script src="/js/blog.js"></script>