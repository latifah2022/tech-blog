<div class="blog">
    
    <p>
        <h3>New Posts</h3>
        {{#each content as |content|}}
        <span class="content">{{content.userContent}}</span>
        <p> - {{content.user.name}} on {{format_date content.date_created}}</p>
        {{/each}}
  </p>

    <form class="form review-form">
    <div class="form-group">
        <label class="tite" for="content">Content</label>
        <input class="title"placeholder="Blog Tittle" name="title"></input>
        <textarea class="form-input" id="blog-comment" name="content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn-1 btn-primary">Create</button>
      <button type="submit" class="btn-3 btn-primary">Edit</button>
      <button type="submit" class="btn-2 btn-primary">Delete</button>
    </div>
  </form>

</div>
<script src="js/post.js"></script>